<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bust_item_star"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_star_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/bust_item_name"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/bust_item_name"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/bust_item_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/bust_item_name"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="B-63" />

    <TextView
        android:id="@+id/bust_item_destiny"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bust_item_name"
        tools:text="Jardim Alvorada" />

    <TextView
        android:id="@+id/bust_item_arrive_at"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="3 min"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>